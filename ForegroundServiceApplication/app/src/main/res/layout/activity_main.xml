<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="net.hogelab.android.foregroundservice.MainViewModel" />
        <variable
            name="viewModel"
            type="MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_wifi_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Start"
            android:onClick="@{() -> viewModel.onClickWifiStart()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/button_wifi_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Stop"
            android:onClick="@{() -> viewModel.onClickWifiStop()}"
            app:layout_constraintTop_toBottomOf="@id/button_wifi_start"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>